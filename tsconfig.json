{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "types": ["jest", "node"]
  },
  "include": ["./src/**/*", "./src/*"],
  "exclude": [
    "node_modules",
  ]
}